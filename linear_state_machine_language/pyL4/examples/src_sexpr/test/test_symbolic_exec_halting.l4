			))

		)
		(FollowingSituation
			(if (n < (START + 5))
				(DoIt immediately)
			)
			(if (n â‰¥ (START + 5))
				(Done immediately)
			)
		)
	)

	(Action Done
		(TransitionsTo Fulfilled)
	)

)