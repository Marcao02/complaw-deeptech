file: toy_and_teaching/test_local_vars.l4

roles: Env, Arbiter

state vars:
    n : Nat := 3

situation Ongoing:
    DoIt (next_event_td == situation_entrance_td)

action DoIt()  transitions to AfterDoIt:
    transform:
    following situation:
        FinishIt(((n * n) * (n * n))) (next_event_td == situation_entrance_td)

action FinishIt(z: Nat) transitions to Fulfilled:
    transform:
        n := z
