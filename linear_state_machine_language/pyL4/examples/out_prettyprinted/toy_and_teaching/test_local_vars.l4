file: toy_and_teaching/test_local_vars.l4

roles: Env

global vars:
    n : Nat := 3

section Ongoing:
    DoIt

action DoIt()  transitions to AfterDoIt:
    transform:
    following section:
        FinishIt(((n * n) * (n * n)))

action FinishIt(z: Nat) transitions to Fulfilled:
    transform:
        n := z
