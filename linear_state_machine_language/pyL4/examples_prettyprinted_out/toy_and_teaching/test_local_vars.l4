-----------------------------------------
file: toy_and_teaching/test_local_vars.l4

roles: Env, I

global vars:
    n : ℕ := 3

section Ongoing:
    DoIt

action DoIt()  transitions to AfterDoIt:
    transform:
        x : ℕ := (n * n)
        y : ℕ := (x * x)
    following section:
        FinishIt(y)

action FinishIt(z)  transitions to Fulfilled:
    transform:
        n := z
